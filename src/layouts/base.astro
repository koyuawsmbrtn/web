---
let title = "koyu's personal website";
if (Astro.props.title !== undefined) {
    title = title+" | "+Astro.props.title;
}

import { SEO } from "astro-seo";
import Banner from "../components/banner.astro";
import { ViewTransitions } from 'astro:transitions';
import "../scss/index.scss";
---

<html lang="en" transition:animate="none">
    <head>
        <SEO
        charset="utf-8"
        description={Astro.props.description}
        openGraph={{
            basic: {
                title: title,
                type: "website",
                image: "https://web.koyu.space/avatar.png"
            },
            image: {
                alt: "koyu's personal website"
            }
        }}
        extend={{
        link: [
            { rel: "shortcut icon", href: "/favicon.ico" },
            { rel: "me", href: "https://kopimi.space/@koyu" },
        ],
        meta: [
            {
            name: "twitter:image",
            content: "https://web.koyu.space/avatar.png",
            },
            { name: "twitter:title", content: title },
            { name: "twitter:description", content: Astro.props.description },
            { name: "viewport", content: "width=device-width" },
        ],
        }} />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body>
        <audio src="https://yt.koyu.space/latest_version?id=z6LmMCuGjfA&itag=140&local=true" id="audio" autoplay loop transition:persist></audio>
        <script>
            let audio = document.getElementById("audio");
            audio.volume = 0.25;
            setInterval(function() {
                audio.play();
            }, 1000);
        </script>
        <canvas id="snow" transition:persist></canvas>
        <script is:inline transition:persist src="/snow.js"></script>
        <Banner />
        <main>
            <slot/>
        </main>
    </body>
</html>
